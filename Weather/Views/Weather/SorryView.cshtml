@model Weather.Models.IpLocationObject
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SorryView</title>
    <style>
        p, ul {
            font-family: 'Raleway', sans-serif;
        }

        .image p {
            font-family: 'Sansita', sans-serif;
        }


        #weather {
            margin: 25px auto 0px auto;
            text-align: center;
            padding-top: 35px;
            padding-bottom: 35px;
            border-radius: 10px 10px 10px 10px;
            -moz-border-radius: 10px 10px 10px 10px;
            -webkit-border-radius: 10px 10px 10px 10px;
            border: 0px solid #000000;
            -webkit-box-shadow: 10px 10px 5px 0px rgba(0, 0, 0, 0.75);
            -moz-box-shadow: 10px 10px 5px 0px rgba(0, 0, 0, 0.75);
            box-shadow: 10px 10px 5px 0px rgba(0, 0, 0, 0.75);
            width: 700px;
            max-width: 85%;
            animation: Yllw 3s;
            animation-fill-mode: both;
            animation-iteration-count:infinite;
        }

        @@keyframes Yllw {


            0% {
                background-color: hsla(360, 100%, 62%, 0);
            }

            25% {
                background-color: hsla(260, 100%, 62%, 0.33);
            }

            75% {
                background-color: hsla(160, 100%, 62%, 0.66);
            }

            100% {
                background-color: hsla(58, 100%, 62%, 1);
            }
        }

      

        #image {
            max-width: 90%;
            border-radius: 4px 20px 4px 20px;
            -moz-border-radius: 4px 20px 4px 20px;
            -webkit-border-radius: 4px 20px 4px 20px;
            border: 0px solid #000000;
        }

        ul {
            text-align: left;
            list-style: none;
            margin-left: 20%;
            max-width: 90%;
        }
    </style>
</head>
<body>
    <div id="weather">
        <div class="image">
            <img id="image" src="/Content/us.jpg" />

        </div>


        <p>According to your IP address you are in @Model.City, @Model.Country</p>
        <p>Back here on the server, I'm checking for your local weather matched to your zip code</p>
        <p>Since there are no zip codes in @Model.City, I won't be able to show you your weather.</p>



    </div>





    <link href="https://fonts.googleapis.com/css?family=Raleway|Sansita" rel="stylesheet">
</body>


</html>





